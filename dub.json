{
    "name": "dagon-sandbox",
    "description": "Scene editor for Dagon",
    "homepage": "https://github.com/gecko0307/dagon-sandbox",
    "license": "Boost",
    "authors": [
        "Timur Gafarov"
    ],

    "dependencies": {
        "dagon": "0.11.0",
        "dagon:physics": "0.11.0",
        "dagon:nuklear": "0.11.0",
        "dagon:ftfont": "0.11.0"
    },

    "buildRequirements":[
        "allowWarnings"
    ],

    "sourcePaths": ["src"],
    "importPaths": ["src"],
    "mainSourceFile": "src/main.d",
    "copyFiles-windows-x86": ["lib/x86/*.dll"],
    "copyFiles-windows-x86_64": ["lib/x64/*.dll"],

    "configurations": [
        {
            "name": "application",
            "targetType": "executable"
        }
    ]
}
