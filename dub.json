{
    "name": "dagon-sandbox",
    "description": "Scene editor for Dagon",
    "homepage": "https://github.com/gecko0307/dagon-sandbox",
    "license": "Boost",
    "authors": [
        "Timur Gafarov"
    ],

    "dependencies": {
        "dagon": "~master",
        "dagon:nuklear": "~master",
        "dagon:ftfont": "~master",
        "bindbc-assimp": "0.0.1-beta1"
    },

    "buildRequirements":[
        "allowWarnings"
    ],

    "sourcePaths": ["src"],
    "importPaths": ["src"],
    "mainSourceFile": "src/main.d",
    "copyFiles-windows-x86": ["lib/x86/*.dll"],
    "copyFiles-windows-x86_64": ["lib/x64/*.dll"],

    "configurations": [
        {
            "name": "application",
            "targetType": "executable"
        },
        {
            "name": "mimalloc",
            "targetType": "executable",
            "dependencies": {
                "bindbc-loader": "~>0.2.1"
            },
            "versions": ["Mimalloc"]
        }
    ]
}
