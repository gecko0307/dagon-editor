{
    "name": "dagon-editor",
    "description": "Scene editor for Dagon ",
    "homepage": "https://github.com/gecko0307/dagon-editor",
    "license": "Boost",
    "authors": [
        "Timur Gafarov"
    ],

    "dependencies": {
        "dagon": "~master",
    },

    "buildRequirements":[
        "allowWarnings"
    ],

    "sourcePaths": ["src"],
    "importPaths": ["src"],
    "mainSourceFile": "src/main.d",

    "configurations": [
        {
            "name": "application",
            "targetType": "executable"
        },
        {
            "name": "mimalloc",
            "targetType": "executable",
            "dependencies": {
                "bindbc-loader": "~>0.2.1"
            },
            "versions": ["Mimalloc"],
            "copyFiles-windows-x86": ["lib/x86/*.dll"],
            "copyFiles-windows-x86_64": ["lib/x64/*.dll"]
        }
    ],
}
